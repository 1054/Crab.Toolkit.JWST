#!/bin/bash
# 
# Inputs:
# 
#    jwst dataset names ("jwpppppooovvv_ggsaa_eeeee_detector_prodType")
#    
#    For each input jwst dataset name, the following file must exist:
#        {dataset_name}/calibrated1_rates/{dataset_name}_rate.fits
# 
# Outputs:
# 
#    For each input jwst dataset name, the main output file is: 
#        {dataset_name}/calibrated2_cals/{dataset_name}_cal.fits
# 
# 
#set -e

# Set necessary system variables
if [[ -z "$CRDS_PATH" ]]; then
    export CRDS_PATH=$HOME/jwst_crds_cache
fi
if [[ -z "$CRDS_SERVER_URL" ]]; then
    export CRDS_SERVER_URL=https://jwst-crds.stsci.edu
fi

# Get script_dir
script_dir=$(dirname "${BASH_SOURCE[0]}")

# Define function to get abspath
abspath () {
    perl -MCwd -e 'print Cwd::abs_path shift' "$1"
}


# Read user input
iarg=1
argstr=""
work_dir="."
current_dir=$(pwd)
overwrite=0
dataset_names=()
user_flat_dir=""
sourcecat=""
sourcecat_filter=""
segmap=""
direct_image=""
no_bkgsub=0
no_sextractor=0
while [[ $iarg -le $# ]]; do
    argstr=$(echo "${!iarg}" | tr '[:upper:]' '[:lower:]' | perl -p -e 's/_/-/g' | perl -p -e 's/^-([a-z]+.*)/--\1/g')
    echo "argstr: ${argstr}"
    if [[ "$argstr" == "--"* ]]; then
        if [[ "$argstr" == "--work-dir" ]]; then
            iarg=$((iarg+1))
            if [[ $iarg -le $# ]]; then
                work_dir="${!iarg}"
                echo "work_dir = \"$work_dir\""
            fi
        elif [[ "$argstr" == "--user-flat-dir" ]]; then
            iarg=$((iarg+1))
            if [[ $iarg -le $# ]]; then
                user_flat_dir=$(abspath "${!iarg}")
                echo "user_flat_dir = \"$user_flat_dir\""
            fi
        elif [[ "$argstr" == "--sourcecat-filter" ]] || [[ "$argstr" == "--sourcecat_filter" ]]; then
            iarg=$((iarg+1))
            if [[ $iarg -le $# ]]; then
                sourcecat_filter="${!iarg}"
                echo "sourcecat_filter = \"$sourcecat_filter\""
            fi
        elif [[ "$argstr" == "--sourcecat" ]]; then
            iarg=$((iarg+1))
            if [[ $iarg -le $# ]]; then
                sourcecat=$(abspath "${!iarg}")
                echo "sourcecat = \"$sourcecat\""
            fi
        elif [[ "$argstr" == "--segmap" ]]; then
            iarg=$((iarg+1))
            if [[ $iarg -le $# ]]; then
                segmap=$(abspath "${!iarg}")
                echo "segmap = \"$segmap\""
            fi
        elif [[ "$argstr" == "--direct-image" ]] || [[ "$argstr" == "--direct_image" ]]; then
            iarg=$((iarg+1))
            if [[ $iarg -le $# ]]; then
                direct_image=$(abspath "${!iarg}")
                echo "direct_image = \"$direct_image\""
            fi
        elif [[ "$argstr" == "--no-bkgsub" ]]; then
            no_bkgsub=1
            echo "no_bkgsub = \"$no_bkgsub\""
        elif [[ "$argstr" == "--no-sextractor" ]]; then
            no_sextractor=1
            echo "no_sextractor = \"$no_sextractor\""
        elif [[ "$argstr" == "--overwrite" ]]; then
            overwrite=1
            echo "overwrite = \"$overwrite\""
        else
            echo "Unkonwn argument: ${!iarg}"
        fi
    else
        dataset_names+=("${!iarg}")
    fi
    # 
    iarg=$((iarg+1))
done


# Check user input
# If dataset_names is not given, then we will search under current or specified working directory.
if [[ ${#dataset_names[@]} -eq 0 ]]; then
    if [[ "$work_dir" != "." ]]; then
        echo "Searching for JWST dataset under working directory: $work_dir"
        found_dirs=($(find $work_dir -maxdepth 1 -mindepth 1 -type d -name "jw*_*" | sort -V))
    else
        echo "Searching for JWST dataset under current directory: $current_dir"
        found_dirs=($(find . -maxdepth 1 -mindepth 1 -type d -name "jw*_*" | sort -V))
    fi
    for (( i = 0; i < ${#found_dirs[@]}; i++ )); do
        found_dirname=$(basename "${found_dirs[i]}")
        if [[ $($script_dir/go-jwst-parse-dataset-name.py "$found_dirname" 2>/dev/null | tail -n 1) == "JWST_Dataset_Name"* ]]; then
            dataset_names+=("$found_dirname")
        fi
    done
else
    for (( i = 0; i < ${#dataset_names[@]}; i++ )); do
        dataset_name="${dataset_names[i]}"
        if [[ "$dataset_name" == *"/" ]]; then
            dataset_name=$(echo "$dataset_name" | perl -p -e 's%/+$%%g')
        fi
        if [[ $($script_dir/go-jwst-parse-dataset-name.py "$dataset_name" 2>/dev/null | tail -n 1) != "JWST_Dataset_Name"* ]]; then
            echo "Error! The input dataset name \"$dataset_name\" seems incorrect?"
            echo "Or Python issue? Please try to run $script_dir/go-jwst-parse-dataset-name.py \"$dataset_name\""
            exit 255
        fi
    done
fi

if [[ ${#dataset_names[@]} -eq 0 ]]; then
    echo "No JWST dataset found!"
    exit 2
fi


# cd work_dir
if [[ "$work_dir" != "." ]]; then
    echo "cd \"$work_dir\""
    cd "$work_dir"
fi


# process datasets
for (( i = 0; i < ${#dataset_names[@]}; i++ )); do
    
    dataset_name="${dataset_names[i]}"
    echo "*** Processing $dataset_name ***"
    
    if [[ ! -d $dataset_name ]]; then
        echo "Error! Dataset directory does not exist: \"$dataset_name\"! Current directory: \"$(pwd)\"."
        exit 255
    fi
    
    echo cd $dataset_name
    cd $dataset_name
    
    # check input directory: calibrated1_rates
    if [[ ! -d calibrated1_rates ]]; then
        echo "Error! Dataset directory does not exist: \"calibrated1_rates\"! Current directory: \"$(pwd)\"."
        exit 255
    fi

    # check output directory: calibrated2_cals
    if [[ ! -d calibrated2_cals ]]; then
        echo "mkdir calibrated2_cals"
        mkdir calibrated2_cals
    fi
    
    # Run step 1
    file_in="calibrated1_rates/${dataset_name}_rate.fits"
    file_out="calibrated2_cals/${dataset_name}_cal.fits"
    proc_args=()
    if [[ "$user_flat_dir"x != ""x ]]; then
        proc_args+=(--user-flat-dir "$user_flat_dir")
    fi
    if [[ $overwrite -gt 0 ]]; then
        proc_args+=(--overwrite)
    fi
    echo "python -c \"from jwst import datamodels; print(datamodels.open('$file_in').meta.exposure.type)\" 2>/dev/null"
    exp_type=$(python -c "from jwst import datamodels; print(datamodels.open('$file_in').meta.exposure.type)" 2>/dev/null)
    echo "exp_type = \"$exp_type\""
    if [[ x"$exp_type" == x"" ]]; then
        echo "Error! Could not get datamodel.meta.exposure.type for \"$file_in\"!"
        echo "Command executed: python -c \"from jwst import datamodels; print(datamodels.open(\'$file_in\').meta.exposure.type)\""
        exit 255
    fi
    if [[ "$exp_type" == "NRS_MSATA" ]] || [[ "$exp_type" == "NRS_TACONFIRM" ]]; then
        
        echo "*** Running ***" python $script_dir/go-jwst-imaging-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        python $script_dir/go-jwst-imaging-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        
    elif [[ "$exp_type" == "NRS_MSASPEC" ]]; then
        
        msa_name=$(echo "$dataset_name" | perl -p -e 's/^(jw[0-9]+)_([0-9]+)_([0-9]+)_([a-zA-Z0-9]+)$/\1/g')
        msa_file=$(find "auxiliary" -maxdepth 1 -mindepth 1 -name "${msa_name}_*_msa.fits" | tail -n 1)
        if [[ x"$msa_file" == x"" ]]; then
            echo "Error! Could not find \"auxiliary/${msa_name}_*_msa.fits\" which is needed and should be downloaded with the data!"
            exit 255
        fi
        proc_args+=(--msa-meta-file "$msa_file")
        echo "*** Running ***" python $script_dir/go-jwst-spectroscopy-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        python $script_dir/go-jwst-spectroscopy-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        
    elif [[ "$exp_type" == "NRC_WFSS" ]]; then
        
        # use user input sourcecat or find sourcecat from ../processing_NIRCam_WFSS_direct_imaging/calibrated3_mosaics/
        
        pronum_obsnum_visnum=($(echo "$dataset_name" | perl -p -e 's/^jw([0-9]{5})([0-9]{3})([0-9]{3})_([0-9]+)_([0-9]+)_([a-zA-Z0-9]+)$/\1 \2 \3/g'))
        if [[ ${#pronum_obsnum_visnum[@]} -ne 3 ]]; then
            echo "Error! Could not match proposal number, observation number and visit number from the dataset name \"$dataset_name\"!"
            exit 255
        fi
        pronum=${pronum_obsnum_visnum[0]}
        obsnum=${pronum_obsnum_visnum[1]}
        visnum=${pronum_obsnum_visnum[2]}
        if [[ "$sourcecat_filter"x == ""x ]]; then
            scatfil="NIRCAM_"
        else
            scatfil="NIRCAM_${sourcecat_filter}"
        fi
        # 
        # find associated direct imaging directory
        direct_imaging_dir="processing_NIRCam_WFSS_direct_imaging"
        parent_dir=$(basename $(dirname $(pwd -P)))
        if [[ "$parent_dir" == *"NIRCam_WFSS"* ]]; then
            direct_imaging_dir=$(echo "$parent_dir" | perl -p -e "s/NIRCam_WFSS/NIRCam_WFSS_direct_imaging/g")
        fi
        # 
        sourcecat_t="$sourcecat"
        if [[ "$sourcecat_t"x == ""x ]]; then
            echo "The file \$sourcecat is not set, trying to find it from ../../${direct_imaging_dir}/calibrated3_mosaics/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_cat.ecsv"
            sourcecat_t=$(ls "../../${direct_imaging_dir}/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_cat.ecsv 2>/dev/null | tail -n 1)
        fi
        if [[ "$sourcecat_t"x == ""x ]]; then
            echo "The file \$sourcecat is not set, trying to find it from ../../${direct_imaging_dir}/calibrated3_mosaics/jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_cat.ecsv"
            sourcecat_t=$(ls "../../${direct_imaging_dir}/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_cat.ecsv 2>/dev/null | tail -n 1)
        fi
        if [[ "$sourcecat_t"x == ""x ]]; then
            echo "Error! Could not find \"sourcecat\". Please set one --sourcecat!"
            exit 255
        else
            proc_args+=(--sourcecat "$sourcecat_t")
        fi
        # 
        segmap_t="$segmap"
        if [[ "$segmap_t"x == ""x ]]; then
            echo "The file \$segmap is not set, trying to find it from ../../${direct_imaging_dir}/calibrated3_mosaics/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_segm.fits"
            segmap_t=$(ls "../../${direct_imaging_dir}/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_segm.fits 2>/dev/null | tail -n 1)
        fi
        if [[ "$segmap_t"x == ""x ]]; then
            echo "The file \$segmap is not set, trying to find it from ../../${direct_imaging_dir}/calibrated3_mosaics/jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_segm.fits"
            segmap_t=$(ls "../../${direct_imaging_dir}/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_segm.fits 2>/dev/null | tail -n 1)
        fi
        if [[ "$segmap_t"x == ""x ]]; then
            echo "Error! Could not find \"segmap\". Please set one --segmap!"
            exit 255
        else
            proc_args+=(--segmap "$segmap_t")
        fi
        # 
        direct_image_t="$direct_image"
        if [[ "$direct_image_t"x == ""x ]]; then
            echo "The file \$direct_image is not set, trying to find it from ../../${direct_imaging_dir}/calibrated3_mosaics/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_i2d.fits"
            direct_image_t=$(ls "../../${direct_imaging_dir}/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_i2d.fits 2>/dev/null | tail -n 1)
        fi
        if [[ "$direct_image_t"x == ""x ]]; then
            echo "The file \$direct_image is not set, trying to find it from ../../${direct_imaging_dir}/calibrated3_mosaics/jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_i2d.fits"
            direct_image_t=$(ls "../../${direct_imaging_dir}/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_i2d.fits 2>/dev/null | tail -n 1)
        fi
        if [[ "$direct_image_t"x == ""x ]]; then
            echo "Error! Could not find \"direct_image\". Please set one --direct-image!"
            exit 255
        else
            proc_args+=(--direct-image "$direct_image_t")
        fi
        # 
        echo "*** Running ***" python $script_dir/go-jwst-spectroscopy-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        python $script_dir/go-jwst-spectroscopy-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        
    elif [[ "$exp_type" == "NIS_WFSS" ]]; then
        
        # use user input sourcecat or find sourcecat from ../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/
        
        pronum_obsnum_visnum=($(echo "$dataset_name" | perl -p -e 's/^jw([0-9]{5})([0-9]{3})([0-9]{3})_([0-9]+)_([0-9]+)_([a-zA-Z0-9]+)$/\1 \2 \3/g'))
        if [[ ${#pronum_obsnum_visnum[@]} -ne 3 ]]; then
            echo "Error! Could not match proposal number, observation number and visit number from the dataset name \"$dataset_name\"!"
            exit 255
        fi
        pronum=${pronum_obsnum_visnum[0]}
        obsnum=${pronum_obsnum_visnum[1]}
        visnum=${pronum_obsnum_visnum[2]}
        if [[ "$sourcecat_filter"x == ""x ]]; then
            scatfil="NIRISS_"
        else
            scatfil="NIRISS_${sourcecat_filter}"
        fi
        sourcecat_t="$sourcecat"
        if [[ "$sourcecat_t"x == ""x ]]; then
            echo "The file \$sourcecat is not set, trying to find it from ../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_cat.ecsv"
            sourcecat_t=$(ls "../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_cat.ecsv 2>/dev/null | tail -n 1)
        fi
        if [[ "$sourcecat_t"x == ""x ]]; then
            echo "The file \$sourcecat is not set, trying to find it from ../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_cat.ecsv"
            sourcecat_t=$(ls "../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_cat.ecsv 2>/dev/null | tail -n 1)
        fi
        if [[ "$sourcecat_t"x == ""x ]]; then
            echo "Error! Could not find \"sourcecat\". Please set one --sourcecat!"
            exit 255
        else
            proc_args+=(--sourcecat "$sourcecat_t")
        fi
        # 
        segmap_t="$segmap"
        if [[ "$segmap_t"x == ""x ]]; then
            echo "The file \$segmap is not set, trying to find it from ../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_segm.fits"
            segmap_t=$(ls "../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_segm.fits 2>/dev/null | tail -n 1)
        fi
        if [[ "$segmap_t"x == ""x ]]; then
            echo "The file \$segmap is not set, trying to find it from ../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_segm.fits"
            segmap_t=$(ls "../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_segm.fits 2>/dev/null | tail -n 1)
        fi
        if [[ "$segmap_t"x == ""x ]]; then
            echo "Error! Could not find \"segmap\". Please set one --segmap!"
            exit 255
        else
            proc_args+=(--segmap "$segmap_t")
        fi
        # 
        direct_image_t="$direct_image"
        if [[ "$direct_image_t"x == ""x ]]; then
            echo "The file \$direct_image is not set, trying to find it from ../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_i2d.fits"
            direct_image_t=$(ls "../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*/jw${pronum}_obs${obsnum}_visit${visnum}_${scatfil}*_i2d.fits 2>/dev/null | tail -n 1)
        fi
        if [[ "$direct_image_t"x == ""x ]]; then
            echo "The file \$direct_image is not set, trying to find it from ../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_i2d.fits"
            direct_image_t=$(ls "../../processing_NIRISS_WFSS_direct_imaging/calibrated3_mosaics/"jw${pronum}_obs${obsnum}_${scatfil}*/jw${pronum}_obs${obsnum}_${scatfil}*_i2d.fits 2>/dev/null | tail -n 1)
        fi
        if [[ "$direct_image_t"x == ""x ]]; then
            echo "Error! Could not find \"direct_image\". Please set one --direct-image!"
            exit 255
        else
            proc_args+=(--direct-image "$direct_image_t")
        fi
        # 
        echo "*** Running ***" python $script_dir/go-jwst-spectroscopy-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        python $script_dir/go-jwst-spectroscopy-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        
    else
        
        echo "*** Running ***" python $script_dir/go-jwst-spectroscopy-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        python $script_dir/go-jwst-spectroscopy-stage-2-step-1.py "$file_in" "$file_out" "${proc_args[@]}"
        
    fi
    ret=$?
    if [[ $ret -ne 0 ]]; then
        echo "Error occurred?!"
        #exit 255
    fi
    if [[ ! -f "$file_out" ]] && [[ ! -L "$file_out" ]]; then
        echo "Error! Failed to produce the output file: $file_out"
        #exit 255
    fi
    
    # TODO: no further steps
    
    
    echo cd ../
    cd ../
    
done




echo "All done!"





